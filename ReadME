# 1. Rebuild l'app
mvn clean package -Dmaven.test.skip=true

# 2. Nouvelle version de l'image
docker build -t emrane/student-management:2 .

# 3. Tester
docker-compose down && docker-compose up -d

# 4. Pousser
docker push emrane/student-management:2
